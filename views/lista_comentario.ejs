<body>
  <main>
    <% if (err) { %>
      <p>Erro ao carregar comentários: <%= err.message %></p>
    <% } else { %>
      <% if (lista_comentario && lista_comentario.length > 0) { %>
        <div style="position: relative; top: 50px; text-align: center; color: white;">
          <span>Esse vídeo tem ID:</span>
          <span><%= lista_comentario[0].video_id %></span>
        </div>
        <div class="comentario-header">
          <span>ID</span>
          <span>Comentário</span>
          <span>Data</span>
        </div>
        <% lista_comentario.forEach(comentario => { %>
          <div class="comentario">
            <div class="comentario-content">
              <span><%= comentario.id %></span>
              <span><%= comentario.comentario %></span>
              <span><%= comentario.data_formatada %></span>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p>Nenhum comentário encontrado.</p>
      <% } %>
    <% } %>          
  </main>
